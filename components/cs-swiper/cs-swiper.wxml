<swiper
  class="cs-swiper"
  indicator-dots
  indicator-color="ivory"
  indicator-active-color="#ff5777"
  autoplay
  circular
>
  <block
    wx:for="{{ banners }}"
    wx:key="title"
  >
    <swiper-item>
      <image
        src="{{ item.image || item }}"
        mode="widthFix"
        class="cs-swiper-image"
      ></image>
    </swiper-item>
  </block>
</swiper>
