/* components/cs-waterfall/cs-waterfall.wxss */
.cs-waterfall-cpn {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
}

.cs-waterfall-left, .cs-waterfall-right {
  width: 48%;
}

.cs-waterfall-img {
  width: 100%;
  border-radius: 20rpx;
  vertical-align: middle;
}

.cs-waterfall-text {
  height: 80rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 28rpx;
  text-align: center;
}
